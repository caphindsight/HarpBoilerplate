//- Resource import mixins

//- Import a stylesheet
mixin import_stylesheet(url)
    link(rel="stylesheet", type="text/css", href=url)

//- Import a script
mixin import_script(url)
    script(src=url)


//- Import twitter bootstrap (locally)
mixin import_bootstrap
    +import_stylesheet("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
    +import_stylesheet("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css")
    +import_script("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")


//- Import mathjax (for displaying math in the browser)
mixin import_mathjax
    +import_script("https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML")
    script(type="text/x-mathjax-config").
        MathJax.Hub.Config({
            extensions: ["tex2jax.js"],
            jax: ["input/TeX", "output/HTML-CSS"],
            tex2jax: {
                inlineMath:  [ ["$(", ")$"] ],
                displayMath: [ ["$[", "]$"] ],
                processEscapes: true
            },

            "HTML-CSS": {
                availableFonts: ["TeX"]
            },

            TeX: {
                extensions: []
            }
        });

